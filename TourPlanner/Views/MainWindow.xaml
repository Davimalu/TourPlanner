<Window x:Class="TourPlanner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.Views"
        xmlns:viewModel="clr-namespace:TourPlanner.ViewModels"
        mc:Ignorable="d"
        Title="Tour Planner" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Grid Grid.Row="0">
            <local:MenuBar x:Name="MenuBar"/>
        </Grid>

        <!-- Search Bar -->
        <Grid Grid.Row="1">
            <local:SearchBar x:Name="SearchBar"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Tour List -->
                <local:TourList Grid.Column="0" x:Name="TourList"/>

                <!-- GridSplitter for resizing -->
                <GridSplitter Grid.Column="1"
                              Width="5"
                              Margin="0 5 0 5"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              Background="Gray"/>
    
                <!-- Right Column -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Top Column -->
                    <TabControl Grid.Row="0" Margin="5">
                        <TabItem Header="General">
                            <Grid Margin="10">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" Padding="10" Background="White">
                                        <StackPanel>
                                            <TextBlock FontSize="18" FontWeight="Bold" Text="{Binding SelectedTour.TourName, TargetNullValue=''}" Margin="0,0,0,10"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Labels -->
                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Description:" FontWeight="Bold"/>
                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Location:" FontWeight="Bold"/>
                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="End Location:" FontWeight="Bold"/>
                                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Transportation:" FontWeight="Bold"/>
                                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Distance:" FontWeight="Bold"/>
                                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Estimated Time:" FontWeight="Bold"/>

                                                <!-- Data Binding -->
                                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedTour.TourDescription, TargetNullValue=''}" TextWrapping="Wrap"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedTour.StartLocation, TargetNullValue=''}" TextWrapping="Wrap"/>
                                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedTour.EndLocation, TargetNullValue=''}" TextWrapping="Wrap"/>
                                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedTour.TransportationType, TargetNullValue=''}" TextWrapping="Wrap"/>
                                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedTour.Distance, TargetNullValue=''}" TextWrapping="Wrap"/>
                                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedTour.EstimatedTime, TargetNullValue=''}" TextWrapping="Wrap"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                   </ScrollViewer>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Route">
                            <Viewbox>
                                <Image Stretch="Uniform" Source="{Binding Path=SelectedTour.RouteInformation}" />
                            </Viewbox>
                        </TabItem>
                        <TabItem Header="Misc">
                            <StackPanel>
                                <TextBlock>Placeholder for Misc.</TextBlock>
                            </StackPanel>
                        </TabItem>
                    </TabControl>

                    <!-- Grid Splitter for resizing -->
                    <GridSplitter Grid.Row="1"
                                  Height="5"
                                  Margin="5 0 5 0"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  ResizeDirection="Rows"
                                  Background="Gray"/>

                    <!-- Bottom Column -->
                    <Grid Grid.Row="2">
                        <local:TourLogs Grid.Column="0" x:Name="TourLogs"/>
                    </Grid>
            </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
