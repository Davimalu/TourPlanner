<UserControl x:Class="TourPlanner.Views.TourLogs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!--<UserControl.DataContext>
        <local:TourLogsViewModel/>
    </UserControl.DataContext>-->


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ListView zur Anzeige der Tour Logs -->
        <ListView ItemsSource="{Binding TourLogs}" SelectedItem="{Binding SelectedLog}" Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="120"/>
                    <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Duration}" Width="200"/>
                    <GridViewColumn Header="Distance" DisplayMemberBinding="{Binding Distance}" Width="60"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Margin="5" Text="{Binding Path=NewTourName, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Column="1" Margin="5" Content="Add" Command="{Binding Path=ExecuteAddNewTourLog}"/>
            <Button Grid.Column="2" Margin="5" Content="Delete" Command="{Binding Path=ExecuteDeleteTourLog}"/>


        </Grid>
    </Grid>
</UserControl>
