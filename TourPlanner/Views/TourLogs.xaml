<UserControl x:Class="TourPlanner.Views.TourLogs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <local:TourLogsViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ListView zur Anzeige der Tour Logs -->
        <ListView Grid.Row="0" ItemsSource="{Binding TourLogs}" SelectedItem="{Binding SelectedLog, Mode=TwoWay}" Margin="10" Background="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#f0f0f0" CornerRadius="5" Padding="8" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Comment}" FontSize="14" Foreground="Black"/>
                            <TextBlock Text="{Binding Difficulty}" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{Binding DistanceTraveled, StringFormat={}{0} km}" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{Binding TimeTaken, StringFormat={}{0:dd.MM.yyyy HH:mm}}" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{Binding Rating}" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- TextBox nimmt den restlichen Platz ein -->
                <ColumnDefinition Width="Auto"/>
                <!-- Buttons -->
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Margin="5" Text="{Binding Path=NewComment, UpdateSourceTrigger=PropertyChanged}"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Margin="5" Content="Add" Command="{Binding Path=ExecuteAddNewTourLog}" Width="60"/>
                <Button Margin="5" Content="Edit" Command="{Binding Path=ExecuteEditTourLog}" Width="60"/>
                <Button Margin="5" Content="Save" Command="{Binding Path=ExecuteSaveTourLog}" Width="60"/>
                <Button Margin="5" Content="Delete" Command="{Binding Path=ExecuteDeleteTourLog}" Width="60"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>