<!-- EditTourLogWindow.xaml -->
<Window x:Class="TourPlanner.Views.EditTourLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.ViewModels"
        mc:Ignorable="d"
        Title="Edit Tour Log" Height="300" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- TimeStamp -->
        <Label Grid.Row="0" Grid.Column="0" Content="Time Stamp:"/>
        <DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding EditableTourLog.TimeStamp, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <!-- Comment -->
        <Label Grid.Row="1" Grid.Column="0" Content="Comment:"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EditableTourLog.Comment, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <!-- Difficulty -->
        <Label Grid.Row="2" Grid.Column="0" Content="Difficulty:"/>
        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Difficulties}" SelectedItem="{Binding EditableTourLog.Difficulty}" Margin="5"/>

        <!-- Distance Traveled -->
        <Label Grid.Row="3" Grid.Column="0" Content="Distance Traveled:"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding EditableTourLog.DistanceTraveled, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <!-- Time Taken -->
        <Label Grid.Row="4" Grid.Column="0" Content="Time Taken:"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding EditableTourLog.TimeTaken, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <!-- Rating -->
        <Label Grid.Row="5" Grid.Column="0" Content="Rating:"/>
        <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Ratings}" SelectedItem="{Binding EditableTourLog.Rating}" Margin="5"/>

        <!-- Save and Cancel Buttons -->
        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Command="{Binding ExecuteSave}" Width="80" Margin="5"/>
            <Button Content="Cancel" Command="{Binding ExecuteCancel}" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>