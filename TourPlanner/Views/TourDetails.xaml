<UserControl x:Class="TourPlanner.Views.TourDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.Views"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" Padding="10" Background="White">
                <StackPanel>
                    <ui:TextBlock  FontSize="24" Foreground="Black" FontWeight="Bold" Text="{Binding SelectedTour.TourName, TargetNullValue=''}" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Labels -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Margin="0,0,6,0" Symbol="TextDescription24" />
                            <ui:TextBlock Text="Description:" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Margin="0,0,6,0" Symbol="LocationLive24" />
                            <ui:TextBlock Text="Start Location:" FontWeight="Bold" />
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Margin="0,0,6,0" Symbol="Location24" /> <!-- MyLocation24 -->
                            <ui:TextBlock Text="End Location:" FontWeight="Bold" />
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Margin="0,0,6,0" Symbol="VehicleSubway24" />
                            <ui:TextBlock Text="Transportation:" FontWeight="Bold" />
                        </StackPanel>

                        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Margin="0,0,6,0" Symbol="Run24" />
                            <ui:TextBlock Text="Distance:" FontWeight="Bold" />
                        </StackPanel>

                        <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal" Margin="0 0 10 0">
                            <ui:SymbolIcon Margin="0,0,6,0" Symbol="Clock24" />
                            <ui:TextBlock Text="Estimated Time:" FontWeight="Bold" />
                        </StackPanel>

                        <!-- Data Binding -->
                        <ui:TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedTour.TourDescription, TargetNullValue=''}" TextWrapping="Wrap"/>
                        <ui:TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedTour.StartLocation, TargetNullValue=''}" TextWrapping="Wrap"/>
                        <ui:TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedTour.EndLocation, TargetNullValue=''}" TextWrapping="Wrap"/>
                        <ui:TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedTour.TransportationType, TargetNullValue=''}" TextWrapping="Wrap"/>
                        <ui:TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedTour.Distance, StringFormat={}{0} km, TargetNullValue=''}" TextWrapping="Wrap"/>
                        <ui:TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedTour.EstimatedTime, StringFormat={}{0} min, TargetNullValue=''}" TextWrapping="Wrap"/>
                    </Grid>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
