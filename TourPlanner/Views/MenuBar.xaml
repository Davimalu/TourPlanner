<UserControl x:Class="TourPlanner.Views.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:MenuBarViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Name="FileButton" Content="File" Command="{Binding Path=ExecuteShowContextMenu}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="New"/>
                    <MenuItem Header="Open"/>
                    <Separator/>
                    <MenuItem Header="Exit" Command="{Binding Path=ExecuteExitApplication}"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <Button Grid.Column="1" Content="Edit" />
        <Button Grid.Column="2" Content="Options" />
        <Button Grid.Column="3" Content="Help" />
    </Grid>
</UserControl>
